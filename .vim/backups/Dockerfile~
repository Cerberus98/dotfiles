FROM alpine:3.3
MAINTAINER Ben Schumacher <ben.schumacher@cisco.com>

# update the base
RUN    apk add -U ca-certificates \
    && rm -rf /var/cache/apk/*

# create working directory
RUN mkdir -p /vaquero

# set the working directory
WORKDIR /vaquero

# add binary
COPY bin/vaquero /bin/

# set the entrypoint
ENTRYPOINT ["/bin/vaquero"]
