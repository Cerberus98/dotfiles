pushd .
cd coreos_init
mkisofs -output init.iso -volid cidata -joliet -rock user-data meta-data
popd
ID=1
VBoxManage createvm --register --name node-$ID --ostype Linux26_64 --basefolder .
VBoxManage modifyvm node-$ID --audio none \
    --boot1 net \
    --boot2 none \
    --boot3 none \
    --boot4 none \
    --memory 1024 \
    --hostonlyadapter1 vboxnet0 --nic1 hostonly --nicpromisc1 allow-vms --cableconnected1 on \
    --nic2 nat --cableconnected2 on;
VBoxManage storagectl node-$ID  --name IDE --add ide
VBoxManage storageattach node-$ID --storagectl IDE --port 1 --device 0 --type dvddrive --medium ./coreos_init/init.iso
VBoxManage startvm node-$ID
