import setuptools

from pip.download import PipSession
from pip.req import parse_requirements


def reqs(path):
    return [str(r.req) for r in parse_requirements(path, session=PipSession())
            if r.req]


INSTALL_REQUIRES = reqs("requirements.txt")
TESTS_REQUIRE = reqs("test-requirements.txt")

setuptools.setup(
    name='sparta-certgen',
    version='0.1.0',
    url='https://cto-github.cisco.com:harmony/sparta',
    description='Certificate Generation Tool for Bare Metal and VM provisioning',
    author='Cisco Sparta Team',
    author_email='support@cisco.com',
    packages=setuptools.find_packages(),
    include_package_data=True,
    install_requires=INSTALL_REQUIRES,
    tests_require=TESTS_REQUIRE,
    extras_require=dict(
        test=TESTS_REQUIRE,
        tests=TESTS_REQUIRE,
        ),
    entry_points={
        "console_scripts": [
            "make_iso = certgen.generate_certificate:main",
        ],
    }
)
