apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority: /etc/ssl/ca.crt
    server: https://{{ hosts[0].host_ip }}:443
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
    user: controller-manager
  name: controller-manager-ctx
current-context: controller-manager-ctx
users:
- name: controller-manager
  user:
    client-certificate: /etc/ssl/server.crt
    client-key: /etc/ssl/server.key
