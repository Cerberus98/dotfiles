apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority: /etc/sparta/ssl/ca.crt
    server: https://{{ hosts[0].host_ip }}:6443
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
    user: kubelet
  name: kubelet-ctx
current-context: kubelet-ctx
users:
- name: kubelet
  user:
    client-certificate: /etc/sparta/ssl/certs/server.crt
    client-key: /etc/sparta/ssl/certs/server.key
